{
    // vim
    "vim.hlsearch": true,
    "vim.visualstar": false,
    "vim.overrideCopy": true,
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-a>": false,
        "<C-h>": false,
        "<C-e>": false,
        "<C-n>": false,
        "<C-k>": false
    },
    "vim.cursorStylePerMode.normal": "block",

    // files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,

    // python
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "autopep8",
    "python.languageServer": "Pylance",

    // color scheme
    "workbench.preferredHighContrastColorTheme": "Solarized Light",
    "workbench.colorTheme": "Solarized Light",
    "workbench.preferredLightColorTheme": "Solarized Light",

    // security
    "security.workspace.trust.untrustedFiles": "prompt",
    "security.workspace.trust.enabled": true,

    // terminal
    "cmake.configureOnOpen": false,

    // editor
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.includeComments": false,
    "editor.fontFamily": "Lilex, Monaco",
    "editor.semanticHighlighting.enabled": true,
    "editor.fontLigatures": true,
    "editor.tabSize": 4,

    // font size
    "terminal.integrated.fontSize": 14,
    "editor.fontSize": 14,
    "debug.console.fontSize": 14,
    "chat.editor.fontSize": 14,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
    "makefile.configureOnOpen": true,
    "git.openRepositoryInParentFolders": "never",
    "raspberry-pi-pico.python3Path": "/opt/homebrew/bin/python3.13",
    "dart.flutterSdkPath": "/Users/miokato/flutter",
    "[dart]": {
        "editor.inlayHints.enabled": "off",
    },
    "claudeCode.preferredLocation": "panel",

    // dart
    "dart.closingLabels": false,
}
